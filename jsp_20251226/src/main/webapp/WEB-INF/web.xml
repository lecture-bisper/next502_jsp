<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

  <context-param>
    <param-name>INIT_PARAM</param-name>
    <param-value>web.xml 에 저장된 초기화 매개변수</param-value>
  </context-param>

<!--  page 지시어의 errorPage, isErrorPage 속성을 사용하여 예외 처리를 위한 페이지를 설정해야 함 -->
<!--  web.xml 에 error-page 속성을 사용하여 page 지시어의 errorPage, isErrorPage 속성 없이 예외 처리 페이지를 설정할 수 있음 -->
<!--  web.xml 에 설정된 내용은 현재 프로젝트의 모든 jsp 파일에 적용됨 -->
<!--  web.xml 의 error-page 는 현재 프로젝트의 기본 예외 처리 설정 -->
<!--  page 지시어의 errorPage, isErrorPage 는 사용자 예외 처리 설정 -->
  <error-page>
    <error-code>404</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/exception.jsp</location>
  </error-page>
</web-app>